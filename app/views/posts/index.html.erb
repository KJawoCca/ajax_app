<h1>AjaxApp</h1>
<%= form_with url:  "/posts", method: :post,id: "form" do |form| %>
  <%= form.text_field :content %>
  <%= form.submit '投稿する' , id: "submit" %>
<% end %>
<% @posts.each do |i| %>
  <div class="post" data-id=<%= i.id %> data-check=<%= i.checked %>>
    <div class="post-date">
      投稿日時：<%= i.created_at %>
    </div>
    <div class="post-content">
      <%= i.content %>
    </div>
  </div>
<% end %>